{% include 'landers-two-column' %}

{% schema %}
  {
    "name": "Organic Two Col",
    "settings": [
        {
            "type": "select",
            "id": "col-alignment",
            "options": [
              {
                "value": "c-landerTwocol--left",
                "label": "Left"
              },
              {
                "value": "c-landerTwocol--right",
                "label": "Right "
              }
            ],
            "default": "c-landerTwocol--left",
            "label": "Left Or Right Col"
        },
        {
            "type":"image_picker",
            "id":"image",
            "label":"Image"
        },
        {
            "type":"image_picker",
            "id":"image-mobile",
            "label":"Image Mobile"
        },
        {
            "type":"text",
            "id":"vtext",
            "label":"Vertical Text",
            "default":"PRISTINE HARVESTS"
        },
        {
            "type":"text",
            "id":"heading",
            "label":"Heading",
            "default":"Wild-Harvested Means Better Than Organic"
        },
        {
            "type":"html",
            "id":"copy",
            "label":"Copy",
            "default":"We sustainably wild-harvest from the Teton Mountains to capture botanicals at their most pristine. As a result, each drop of The Good contains 3.4 million antioxidant units."
        },
        {
            "type":"text",
            "id":"btntext",
            "label":"Button Text",
            "default":"get 20% off"
        },
        {
            "type":"url",
            "id":"btnurl",
            "label":"Button Url"
        }
    ]
  }
{% endschema %}