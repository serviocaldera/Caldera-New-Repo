<div class="c-storyQuotes">
    <div class="c-storyQuotes__content">
        <div class="c-storyQuotes__copy">
            <div class="c-storyQuotes__copyItem">
                <div class="c-storyQuotes__text">{{ section.settings.copy }}</div> 
                <div class="c-storyQuotes__heading">{{ section.settings.heading }}</div>   
            </div>
        </div>
        <div class="c-storyQuotes__logos">
            {% for block in section.blocks %}
            <div class="c-storyQuotes__imageItem">
                <img src="{{ block.settings.image | img_url: 'master' }}" class="c-storyQuotes__image" />
            </div>
            {% endfor %}
        </div>
    </div>
</div>
<!--Story Quotes-->

{% schema %}
  {
    "name": "Story Quotes",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "html",
            "id": "copy",
            "label": "Copy"
        }
    ],
    "blocks": [
      {
        "type": "logo-block",
        "name": "Logos",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Logo"
          }
        ]
      }
    ]
  }
{% endschema %}