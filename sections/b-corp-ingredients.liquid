<div class="c-pdpInd c-bcropInd">
    <div class="wrapper">
        <div class="c-pdpInd__row">
            <div class="c-pdpInd__col c-pdpInd__content">
                <div class="c-pdpInd__box">
                    <h4 class="c-pdpInd__heading">{{ section.settings.title }}</h4>
                    <h6 class="c-pdpInd__subHeading">{{ section.settings.subheading }}</h6>
                    <div class="c-pdpInd__copy">{{ section.settings.copy }}</div>    
                </div>
            </div>
            <div class="c-pdpInd__col c-pdpInd__list">
                {% for block in section.blocks %}
                    <div class="c-pdpInd__item">
                        <img data-src="{{ block.settings.image | img_url: "master" }}" class="lazyload c-pdpInd__image" alt="{{ block.settings.name }}" />
                        <p class="c-pdpInd__name">{{ block.settings.name }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <a href="#" class="c-pdpInd__readmore">
        <svg width="28px" height="16px" viewBox="0 0 28 16" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
