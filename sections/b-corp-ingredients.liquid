<script type="text/javascript">
    $(document).ready(function(){
        $('.c-pdpInd__readmore').click(function(){
            $(this).toggleClass('is-open');
            $('.c-pdpInd').toggleClass('is-open');
            return false;
        });
    });
</script>
{% schema %}
  {
    "name": "Ingredients",
    "settings": [
      {
        "type":"text",
        "id":"title",
        "label":"Title",
        "default":"Business Should Be A Force For Good."
      },
      {
        "type":"text",
        "id":"subheading",
        "label":"Sub Heading",
        "default":"B Corps invest in people, communities, and the planet. "
      },
      {
        "type":"html",
        "id":"copy",
        "label":"Copy",
        "default":"We believe that business has a purpose beyond creating profit. That’s why we embrace the additional costs and effort required to keep The Good, our packaging, and entire production process, 100% free of all toxic and synthetic ingredients. Caldera + Lab is honored to meet B Corp’s impeccable standards. Now and always."
      }
    ],
    "blocks": [
      {
        "type": "contentcolumn",
        "name": "Ingredients",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "name",
                "label": "Ingredients Name"
            }
        ]
      }
    ]
  }
{% endschema %}