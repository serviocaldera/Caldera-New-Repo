{% schema %}
{
    "name": "Account",
    "settings": [
        {
            "type":"checkbox",
            "id":"zoom-call",
            "label":"Enable Zoom section",
            "default": false
        },
        {
            "type":"image_picker",
            "id":"image",
            "label":"Image"
        },
        {
            "type":"text",
            "id":"heading",
            "label":"Heading",
            "default":"Book Your Personalized Skincare Consultation"
        },
        {
            "type":"html",
            "id":"copy",
            "label":"Copy",
            "default":"Get all your skincare questions answered with a complimentary 15 minute consultation with our resident esthetician, Kristin. "
        },
        {
            "type":"url",
            "id":"book-call-btn",
            "label":"Book A Call Link"
        },
        {
            "type":"text",
            "id":"book-call-text",
            "label":"Book A Call Text",
            "default":"Book Now"
        },
        {
            "type":"richtext",
            "id":"bottom-copy",
            "label":"Bottom Copy"
        }
    ]
}
{% endschema %}