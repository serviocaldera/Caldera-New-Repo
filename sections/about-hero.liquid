<div class="story{% if section.settings.section_classname %} {{ section.settings.section_classname }}{% endif %}">
    <div class="story__hero c-aboutHero">
      <div class="hero__image c-aboutHero__image" style="background-image: url({{ section.settings.hero_image | img_url: '2880x' }});" data-mobile-image="{% if section.settings.hero_mobile_image %}{{ section.settings.hero_mobile_image | img_url: '1984x' }}{% endif %}" data-desktop-image="{{ section.settings.hero_image | img_url: '2880x' }}" data-mobile-image-check></div>
      <div class="wrapper">
          <div class="c-aboutHero__content">
              <div class="c-aboutHero__subHeading">{{ section.settings.subheading }}</div>
              <h2 class="c-aboutHero__title">{{ section.settings.title }}</h2>
              <p class="c-aboutHero__copy">{{ section.settings.copy }}</p>
          </div>
      </div>
  </div>  
</div>


{% schema %}
  {
    "name": "About Hero",
    "settings": [
      {
        "type":"image_picker",
        "id":"hero_image",
        "label":"Hero Image",
        "info":"Recommended dimensions: 2880px x 908px"
      },
      {
        "type":"image_picker",
        "id":"hero_mobile_image",
        "label":"Hero Mobile Image",
        "info":"Recommended dimensions: 1984px x 1396px"
      },
      {
        "type":"text",
        "id":"subheading",
        "label":"Sub Heading",
        "default":"SCIENTIFICALLY-ENGINEERED"
      },
      {
        "type":"text",
        "id":"title",
        "label":"Title",
        "default":"We Are Greentek Self/Care."
      },
      {
        "type":"html",
        "id":"copy",
        "label":"Copy",
        "default":"We create high performance men’s skincare by combining pharmaceutical-grade science, nature’s purest and most potent ingredients, and sustainable business practices."
      },
      {
        "type": "text",
        "id": "section_classname",
        "label": "Section Class Name"
      }
    ]
  }
{% endschema %}