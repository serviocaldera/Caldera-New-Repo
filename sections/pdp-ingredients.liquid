{% schema %}
  {
    "name": "PDP Ingredients",
    "settings": [
      {
        "type":"text",
        "id":"title",
        "label":"Title",
        "default":"Beyond Organic"
      },
      {
        "type":"text",
        "id":"subheading",
        "label":"Sub Heading",
        "default":"Exceptional Skin Requires Exceptional Ingredients."
      },
      {
        "type":"html",
        "id":"copy",
        "label":"Copy",
        "default":"The Good is a 100% plant-based and non-GMO skincare product that’s the result of meticulous craftsmanship. We teamed up with world-renowned scientists to create a completely non-toxic product that’s proven to give you your best skin ever. Each drop contains 27 active botanicals wild harvested from the Teton Mountain Range. Based on extensive research and clinical trials, we set out to surpass conventional methods and ingredients to create a product specifically tailored to the skin of discerning men."
      }
    ],
    "blocks": [
      {
        "type": "contentcolumn",
        "name": "Ingredients",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "name",
                "label": "Ingredients Name"
            }
        ]
      }
    ]
  }
{% endschema %}