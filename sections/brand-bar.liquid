<div class="brand-bar">
  <div class="wrapper">
    <div class="grid">
      <div class="grid__item medium--two-thirds push--medium--one-sixth">
        <div class="brand-bar__items">
          {% for block in section.blocks %}
            <div class="brand-bar__item">
              <img src="{{ block.settings.brand_image | img_url: '80x' }}" data-rjs="{{ block.settings.brand_image | img_url: '160x' }}" alt="{{ block.settings.brand_image.alt }}">
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Brand Bar",
    "max_blocks":4,
    "blocks": [
      {
        "type": "brand",
        "name": "Value Proposition",
        "settings": [
          {
            "type":"image_picker",
            "id":"brand_image",
            "label":"Brand Image",
            "info":"Image Dimensions: 160px x 160px"
          }
        ]
      }
    ]
  }
{% endschema %}