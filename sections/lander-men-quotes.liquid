<div class="wrapper c-landerQuotes">
    <div class="c-landerQuotes__container">
        <h2 class="c-landerQuotes__title">{{ section.settings.title }}</h2>
        <div class="c-landerQuotes__row">
            {% for block in section.blocks %}
            <div class="c-landerQuotes__item">
                <p class="c-landerQuotes__text">{{ block.settings.text }}</p>
                <div class="c-landerQuotes__name">{{ block.settings.name }}</div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
<!--c-landerBanner-->

{% schema %}
  {
    "name": "Quotes",
    "settings": [
      {
        "type":"text",
        "id":"title",
        "label":"Title",
        "default": "What People Are Saying About The Good"
      }
    ],
    "blocks": [
      {
        "type": "quotes-block",
        "name": "Quotes",
        "settings": [
          {
            "type": "html",
            "id": "text",
            "label": "Text"
          },
          {
            "type": "text",
            "id": "name",
            "label": "Name"
          }
        ]
      }
    ]
  }
{% endschema %}