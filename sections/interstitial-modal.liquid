<div class="c-interstitialModal modal" data-modal="interstitial-modal" id="interstitial-modal">
    <div class="modal__backdrop c-interstitialModal__backDrop"></div>
    <div class="c-interstitialModal__container modal__content ">
        <div class="c-interstitialModal__inner">
            <div class="c-interstitialModal__content">
                <a class="c-interstitialModal__close js-modal-subscribe-checkout">
                    <svg width="16px" height="16px" viewBox="0 0 16 16" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                        <g id="Gut-Landing-Page" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                            <g id="Desktop_interstitial-screen-selector" transform="translate(-1084.000000, -313.000000)" fill="#AF5D00" fill-rule="nonzero">
