{% schema %}
  {
    "name": "Interstitial Modal",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Want To Save Money?"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Switch to a Subscription and Save 20%. â€¨Easily Edit Your Subscription at Any Time!"
      },
      {
        "type": "text",
        "id": "content-heading",
        "label": "Content Heading",
        "default": "Eligible Product"
      },
      {
        "type": "image_picker",
        "id": "product-image",
        "label": "Product Image"
      },
      {
        "type": "text",
        "id": "product-name",
        "label": "Product Name",
        "default": "The Good Multifunctional Face Serum"
      },
      {
        "type": "text",
        "id": "product-price",
        "label": "Product Price",
        "default": "$97"
      },
      {
        "type": "text",
        "id": "product-subscribe-price",
        "label": "Product Subscribe Price",
        "default": "$77"
      },
      {
        "type": "text",
        "id": "btn-text",
        "label": "Btn Text",
        "default": "subscribe & save 20%"
      },
      {
        "type": "text",
        "id": "checkout-text",
        "label": "Checkout Text",
        "default": "No Thanks, proceed to Checkout"
      }
    ],
    "blocks": [
      {
        "type": "subscribe",
        "name": "Subscribe Value",
        "settings": [
          {
            "type":"text",
            "id":"subscribe-value",
            "label":"Value",
            "info":"Add the Recharge Ruleset Value"
          }
        ]
      }
    ]
  }
{% endschema %}
