{% if product.metafields.custom_fields["enable_organic_ingredients"] == 1%}
<div class="c-pdpInd">
    <div class="wrapper">
        <div class="c-pdpInd__row">
            <div class="c-pdpInd__col c-pdpInd__content">
                <div class="c-pdpInd__box">
                    {% if product.metafields.custom_fields["organic_ingredients_title"] != blank %}
                    <h4 class="c-pdpInd__heading">
                        {{ product.metafields.custom_fields["organic_ingredients_title"] }}
                    </h4>
                    {% endif %}
                    {% if product.metafields.custom_fields["organic_ingredients_heading"] != blank %}
                    <h6 class="c-pdpInd__subHeading">
                        {{ product.metafields.custom_fields["organic_ingredients_heading"] }}
                    </h6>  
                    {% endif %}
                    {% if product.metafields.custom_fields["organic_ingredients_copy"] != blank %}
                        <div class="c-pdpInd__copy c-pdpInd__copy--desktop">    
                            {{ product.metafields.custom_fields["organic_ingredients_copy"] }}
                        </div>    
                    {% endif %}   
                </div>
            </div>
            {% if product.metafields.custom_fields["organic_ingredients_items"] != blank %}
            <div class="c-pdpInd__col c-pdpInd__list">
                {% for item in product.metafields.custom_fields["organic_ingredients_items"] %}
                    <div class="c-pdpInd__item">
                        {% if item["icon"] != blank %}
                            <img src='{{ item["icon"] }}' data-src='{{ item["icon"] }}' class="lazyload c-pdpInd__image" alt='{{ item["name"] }}' />
                        {% endif %}
                        {% if item["name"] != blank %}
                            <p class="c-pdpInd__name">{{ item["name"] }}</p>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
            {% endif %}
            {% if product.metafields.custom_fields["organic_ingredients_copy"] != blank %}
                <div class="c-pdpInd__copy c-pdpInd__copy--mobile">
                    {{ product.metafields.custom_fields["organic_ingredients_copy"] }}
                </div>
            {% endif %}   
        </div>
    </div>
    <a href="#" class="c-pdpInd__readmore">
        <svg width="28px" height="16px" viewBox="0 0 28 16" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
