{% if product.metafields.custom_fields.blk3_image and product.metafields.custom_fields["blk3_headline+paragraph"] and product.metafields.custom_fields.blk3_cta and product.metafields.custom_fields.blk3_link %}
  <div class="product-single__results">
    <div class="wrapper">
      <div class="grid--full">
        <div class="grid__item medium--two-thirds small--one-half">
          <div class="product-single__results-image">
            <div class="product-single__results-bg-image" data-aos="fade-right" data-aos-offset="400" data-aos-once="true" data-aos-duration="1200" style="background-image: url({{ 'clinically-proven-bg.jpg' | asset_img_url: '720x' }})" data-rjs="{{ 'clinically-proven-bg.jpg' | asset_img_url: '1440x' }}"></div>
            {% if product.metafields.custom_fields.blk3_sub-headline %}
              <span class="pre-header" data-text-parallax>{{ product.metafields.custom_fields.blk3_sub-headline }}</span>
            {% endif %}
            <img data-aos="fade-up" data-aos-duration="1000" data-aos-offset="400" data-aos-once="true" data-aos-delay="150" src="{{ product.metafields.custom_fields.blk3_image }}" alt="Clinically Proven Results">
          </div>
        </div>
        <div class="grid__item medium--one-third small--one-half">
          <div class="product-single__results-details">
            {{ product.metafields.custom_fields["blk3_headline+paragraph"] }}
            <a href="{{ product.metafields.custom_fields.blk3_link }}" class="btn btn--primary">{{ product.metafields.custom_fields.blk3_cta }}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}