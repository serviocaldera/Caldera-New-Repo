<div class="nav-desktop{% if template.directory == 'customers' or template.name == blank or template.name contains 'cart' or template == 'page' %} always-opaque{% endif %}" data-navigation>
    <div class="nav-desktop--inner max-width-container">
      <a href="{{ shop.url }}" class="nav-desktop__logo" title="Caldera&plus;Lab - Home">{%- include 'icon' with 'logo' -%}</a>
          <nav>
              <ul class="nav-desktop__menu nav-mobile__menu--secondary">
                  {%- for link in linklists.navigation.links -%}
                          {% if forloop.first == true %}
                          <li class="nav-desktop__item" data-link="{{ link.title }}">
                            <a href="{{ link.url }}" class="nav-desktop__link {% if link.active %}is-active{% endif %}" title="{{ link.title }}">
                                <span>{{ link.title }}</span>
                                {% if link.links != blank %}
                                    <svg width="12" height="8"><path d="M11.06 1.116a.355.355 0 00-.525 0L5.922 6.053 1.3 1.116a.355.355 0 00-.525 0 .416.416 0 000 .56L5.65 6.884A.35.35 0 005.913 7c.09 0 .19-.039.262-.116l4.875-5.208a.407.407 0 00.01-.56z" fill="#AF5D00" fill-rule="nonzero" stroke="#AF5D00"/></svg>
                                {% endif %}
                            </a>
                                <div class="mega-menu">
                                    <div class="mega-menu__inner">
                                        {%- for block in section.blocks -%}
                                            <div class="mega-menu__item">
                                                <a href="{{ block.settings.item_url}}" class="mega-menu__item-link is-child-active">
                                                <img class="mega-menu__item-img" src="{{ block.settings.item_image | img_url: 'master'}}" alt="{{ block.settings.item_title}}">
                                                <p class="mega-menu__item-title">{{ block.settings.item_title}}</p>
                                                <p class="mega-menu__item-type">{{ block.settings.item_type}}</p>
                                                </a>
                                            </div>
                                        {%- endfor -%}
                                    </div>
                                </div> 
                            </li> 
                          {% else %}	
                          <li style="position: unset;" class="nav-desktop__item" data-link="{{ link.title }}">
                            <a href="{{ link.url }}" class="nav-desktop__link {% if link.active %}is-active{% endif %}" title="{{ link.title }}">
                                <span>{{ link.title }}</span>
                                {% if link.links != blank %}
                                    <svg width="12" height="8"><path d="M11.06 1.116a.355.355 0 00-.525 0L5.922 6.053 1.3 1.116a.355.355 0 00-.525 0 .416.416 0 000 .56L5.65 6.884A.35.35 0 005.913 7c.09 0 .19-.039.262-.116l4.875-5.208a.407.407 0 00.01-.56z" fill="#AF5D00" fill-rule="nonzero" stroke="#AF5D00"/></svg>
                                {% endif %}
                            </a>
                              {% if link.links != blank %}
                                  <div class="mega-menu">
                                      <ul class="mega-menu__inner">
                                          {%- for child_link in link.links -%} 
                                              <li class="nav-desktopChild__item">
                                                {% if child_link.url contains "https://calderalab.com/blogs/articles" %}
                                                  <a href="/blogs/articles" class="nav-desktopChild__link {% if child_link.active %}is-child-active{% endif %}">
                                                      <span>{{ child_link.title }}</span>
                                                  </a>
                                                {%else%}
                                                <a href="{{ child_link.url }}" class="nav-desktopChild__link {% if child_link.active %}is-child-active{% endif %}">
                                                    <span>{{ child_link.title }}</span>
                                                </a>
                                                {%endif%}
                                              </li>
                                          {%- endfor -%}
                                      </ul>   
                                  </div>
                              {% endif %}
                            </li> 
                          {% endif %}
                 
                  {%- endfor -%}
              </ul>
          </nav>
          <div class="nav-desktop--right">
              {% if shop.customer_accounts_enabled %} 
                  {% assign customer_account_url = '/account/login' %}
                  {% assign customer_account_text = 'Log In' %}
                  {% if customer %}
                      {% assign customer_account_url = '/account' %}
                      {% assign customer_account_text = 'My Account' %}
                  {% endif %}
                  <a href="{{ shop.url }}{{ customer_account_url }}" class="nav-desktop__account-link" title="{{ customer_account_text }}">{{ customer_account_text }}</a>
              {% endif %}
              
              <a href="/" data-target-element="offcanvas-right" data-offcanvas-src="#offcanvas-right" class="nav-desktop__cart-trigger js-cartCanvas" title="View Bag">
                  <span class="nav-desktop__cart-trigger--icon">{%- include 'icon' with 'bag' -%}</span>
                  <span id="CartCount" class="nav-desktop__cart-trigger--count cart-qty-hidden" rv-show="cart.item_count | gt 0" rv-html="cart.item_count"></span>
              </a>
          </div>
      </div>
  </div>