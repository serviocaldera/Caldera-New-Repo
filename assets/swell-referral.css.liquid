.referral{
    display: flex;
    background-color: #22221e;
    height: 42rem;
    position: relative;
}
.img-to-mobile{
    display: none;
}
.refer-logo{
    content: url({{"swell-referral-img2.png" | asset_url}});
    background-size: cover;
    position: absolute;
    left: 50%;
    transform: translate(-50%,0);
    height: 200px;
    width: 200px;
    top: 18%;
}
.explain-refer{
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.refer{
    width: 50%;
    display: flex;
    justify-content: center;
    padding-top: 4rem;
    padding-left: 4rem;
	position: relative;    
}
.referral-img{
    background-image: url({{"swell-referral-img.png" | asset_url}});
    width: 50%;
    background-size: cover;
    background-position-x: right;
    background-position-y: bottom;
}
.explain-refer h1{
    font-size: 81px;
    line-height: 0.89;
    letter-spacing: normal;
    color: white;
} 
.explain-refer p{
    font-size: 16px;
    font-weight: normal;
    line-height: 1.38;
    letter-spacing: normal;
    color: #fcfbf2;
}
.refer-form p{
    border-top: 1px solid rgba(225, 225, 225, .2);
    padding-top: 2rem;
    margin-top: 2.5rem;
    width: 372px;
    margin-bottom: 1rem;
    letter-spacing: -1px;
    font-size: 13px !important;
    letter-spacing: normal;
    color: #fcfbf2;
}
.refer-form-input{
    width: 372px;
    font-size: 13px;
    height: 44px;
    display: flex;
    flex-wrap: wrap;
}
.refer-form-input input[type=text]{
    width: 76%;
    padding-left: 1rem;
    height: 100%;
    background-color: #22221e;
    border: 1px solid rgba(225,225,225,.5);
    font-size: 10px;
}
.refer-form-input input[type=text]::placeholder{
	color: #fcfbf2;
}
.refer-form-input input[type=submit]{
    width: 24%;
    background-color: #22221e;
    border: 1px solid rgba(225,225,225,.5);
    height: 100%;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 3.41px;
    color: #fcfbf2;  
}
.showForm input:focus{
	color: #fcfbf2 !important;
}
.error-email{
    margin-top: 0 !important;
    border-top: none !important;
    padding-top: 0 !important;
    margin-bottom: 0 !important;
    font-size: 16px !important;
    color: red !important;	
}
.hiddenForm{
	display: none;
}
.share-links-p{
    border-top: none !important;
    padding-top: 0 !important;
    margin-top: 1.5rem !important;
    color: rgba(225,225,225,.5) !important;
    margin-bottom: 0rem !important;    
}
.shareLinks{
    display: flex;
    width: 315px;
    justify-content: space-between;
    margin-top: .5rem;
}
.shareLinks i{
	color: rgba(225,225,225,.6);
    font-size: 11px;
}
.shareLinks div a{
	width: 100%;
    display: flex;
    align-items: center;
}
.shareLinks  label{
    margin-left: .5rem;
    text-transform: none;
    font-size: 13px;
    font-weight: normal;
    letter-spacing: normal;
    color: rgba(225,225,225,.6);
}
.swell-share-referral-sms{
	display: none;
}
.hidden-history{
	display: none;
}
.show-history{
	display: flex;
}
.refer-mail-send{
    position: absolute;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: white;
    top: 0%;
    left: 0%;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .8);
    z-index: 3333;
} 
.refer-mail-send h3{
	font-size:-webkit-xxx-large;
	font-weight: bolder;
	color: white;
}
.refer-mail-send h6{
	color: white;
}
.refer-mail-send-close{
    position: absolute;
    top: 25%;
    right: 50%;
    cursor: pointer;
    color: white;
    font-size: x-large;
}
.history{
	width: 50%;
    justify-content: center;
    color: white;
    background-color: #3d3d39;
    padding-right: 4rem;
    align-items: center;
    padding-top: 4rem;
}
.history a{
    text-decoration: underline;
    color: white;
    font-size: 14px;
    letter-spacing: 0.36px;
}
.history h2{
    color: white;
    font-size: 26px;
    letter-spacing: 1.8px;
    margin-bottom: 0;
}
.history th{
    width: 50%;
    text-align: left;
    font-size: 14px;
    font-weight: 600;
    letter-spacing: normal;
    padding-bottom: .3rem;
}
.history td{
    font-size: 14px;
    border-top: 1px solid rgba(225,225,225,.1);
    height: 2.5rem;
}
.history-refer-table::-webkit-scrollbar
{
    width: 7px;
    border-radius: 100px;
    background-color: #ad6d25;
}
.history-refer-table::-webkit-scrollbar-thumb
{
    height: 86%;
    background-color: #8f8f8f;
    border-radius: 100px;
}
.history p{
	font-size: 14px;
    line-height: 19px;	
}
.history h2:nth-of-type(2)
{
    border-top: 1px solid rgba(225,225,225,.5);
    width: 385px;
    margin-bottom: 0rem;
}
.history-refer-table{
    height: 11rem;
    overflow: auto;
    width: 400px;
    margin-bottom: 2rem;
}
.popup-background{
	position: fixed;
	display: flex;
	align-items: center;
	top:0;
	width: 100vw;
	height:100vh;
    background-color: rgba(0, 0, 0, .9);
    z-index: 10000;
}
.popup-body{
	background-image: url({{"swell-popup-img.png" | aseet_url}});
    background-size: cover;
    width: 564px;
    height: 392px;
    left: 17%;
    position: absolute;
}
.popup-body input{
    color: white;
    background-color: #ad6d25;
    margin-top: 1rem;
    width: 138px;
    height: 33px;
    border: none;
    font-size: 10px;
    font-weight: bold;
    letter-spacing: 3.64px;
    cursor: pointer;
}
.popup-text{
    position: absolute;
    right: -24rem;
    top: 4rem;
}
.popup-body h5{
    font-weight: 500;
    font-size: 56px;
    letter-spacing: -2px;
    color: white;
    margin-bottom: 1rem;
    border-bottom: 1px solid rgba(225,225,225,.4);
    padding-bottom: 1rem;
}
.popup-body p{
    margin-top: 1rem;
    font-size: 15px;
    font-weight: normal;
    letter-spacing: normal;
    color: white;
}
.popup-close{
	content: url({{'swell-popup-close-img.svg' | asset_url}});
    position: absolute;
    top: -14%;
    right: 0%;
    cursor: pointer;
    width: 19px;
}
.show-at-mobile{
    display: none;
}
